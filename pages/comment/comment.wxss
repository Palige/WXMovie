/* pages/comment/comment.wxss */
.detail-container{
  height: 400rpx;
  filter: blur(40rpx); /*模糊*/
  opacity:0.4;  /*透明度*/
}

.detail-mask{
  position: absolute;
width: 100%;
height: 400rpx;
background-color: #333;
top:0;
left:0;
z-index: -1;
}

.detail-info{
  display: flex;
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:400rpx;
}

.detail-img{
width: 280rpx;
height: 90%;
margin-right: 24rpx;
}

.detail{
color: #fff;
  font-size: 24rpx;
}
.detail>view{
  padding: 4px 0;
}
.detail-nm{
  font-size: 40rpx;
  font-weight: bold;
}

.detail-sc{
  color:#fc0;
  font-size: 36rpx;
  font-weight: 700;
}

.desc{
  padding: 20rpx;
  color: #555;
  font-size: 24rpx;
}

.uploadImg{
  width:200rpx;
  height: 200rpx;
  margin-right: 20rpx; 
}
.comment{
  padding: 20rpx;
}

